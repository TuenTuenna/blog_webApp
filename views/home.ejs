<%- include("partials/header"); -%>
<h1>Home</h1>
<!-- ejs docs 참조: https://ejs.co/#docs -->
<p><%= home_content %></p>

<% posts.forEach(function(post){ %>

    <h1> <%= post.title %> </h1>

      <% var str = post.content; %>
      <% if(str.length > 100){ %>
        <% str = str.substring(0, 99); %>
        <% str = str.concat(str, "..."); %>
      <% } %>
      <p> <%= str %> <a href="/posts/<%= post.title %>">Read More</a> </p>

<% }); %>


<%- include("partials/footer"); -%>
